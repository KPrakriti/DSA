package practiceSession1;
import java.util.*;
public class testPractice {

	public static void main(String[] args) {
		int[] arr= {50,60,70,80,90,10,20,30,40};
		int key=20;
		
		int pivot = getPivotIndex(arr,0,arr.length);
		int result=getKeyIndex(arr,key,pivot,0,arr.length);
		if(result == -1) {
			System.out.println(key+ " Does not exsist in the input");
		}
		else {
			System.out.println("The array is rotated at Index:" + pivot);
			System.out.println("Key found at index:" + result);
		}
		
	}
	static int getPivotIndex(int[] arr, int low, int high) {
		
		while(low <= high) {
			int mid=low+(high-low)/2;
			if(arr[mid+1] < arr[mid]) {
				return mid+1;
			}
			else if(arr[mid-1] > arr[mid]) {
				return mid;
			}
			else if(arr[0] > arr[mid]) {
				return getPivotIndex(arr, low, mid-1);
			}
			else {
				return getPivotIndex(arr, mid+1, high);
			}
		}
		return -1;
	}
	static int getKeyIndex(int[] arr,int key, int pivot, int low, int high ) {
		if(arr[pivot]==key) {
			return pivot;
		}
		if(arr[pivot] < key && arr[high-1] < key) {
			high=pivot-1;
		}
		else if(arr[pivot] < key && arr[high-1] >= key) {
			low=pivot+1;
		}
		while(low<=high) {
			int mid=low+(high-low)/2;
			if(arr[mid]==key) {
				return mid;
			}
			else if(arr[mid] > key) {
				high=mid-1;
			}
			else {
				low=mid+1;
			}
		}
		return -1;
	}
}
